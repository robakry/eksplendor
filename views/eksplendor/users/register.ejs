<% layout('layouts/boilerplate') %>
<div class="bg-image-div">
  <div class="form-wrapper">

    <div class="form">

      <form action="/user/register" method="POST" autocomplete="off">
        <h1 class="title">Sing Up.</h1>
        <p>Already have an account? Log In <a href="/user/login">here</a>.</p>

        <div class="form-cart">
          <label for="name" id="label-name">LOGIN*</label><br>
          <input type="text" name="username" id="name" placeholder="Login*">
          <small>Error MSG</small>
        </div>

        <div class="form-cart">
          <label for="password" id="label-password">PASSWORD*</label><br>
          <input type="password" name="password" id="password" placeholder="Password*">
          <small>Error MSG</small>
        </div>

        <div class="form-cart">
          <label for="email" id="label-email">EMAIL*</label><br>
          <input type="email" name="email" id="email" placeholder="Email*">
          <small>Error MSG</small>
        </div>

        <button class="btn btn-invalid">Sign Up</button>

      </form>
    </div>
    
  </div>
</div>
<script src="/js/registerFormCheck.js"></script>
<script src="/js/showLabel.js"></script>